{{! MAIN HEADER }}
<div id='main-header'>
    <div class='container'>
        <div class='row d-flex align-items-center'>
            {{! LOGO }}
            <div class='col-md-3'>
                <div class='header-logo'>
                    <a href='/' class='logo'><img src='/img/logo.png' alt='ElectroHub' /></a>
                </div>
            </div>

            {{! SEARCH BAR }}
            <div class='col-md-4'>
                <div class='header-search' role='search'>
                    <form>
                        <input class='input-search' type='search' placeholder='Bạn cần tìm gì ?' aria-label='Search' maxlength='100' />
                        <button class='btn-search' type='submit'><i class='fa-solid fa-magnifying-glass'></i></button>
                    </form>
                </div>
            </div>

            {{! ACCOUNT }}
            <div class='col-md-5'>
                <div class='header-ctn d-flex justify-content-between'>
                    {{! Delivery Tracking }}
                    <div>
                        <a href='/cart/search-purchase-order'>
                            <button class='btn btn-dark delivery-tracking'>
                                <i class='fa-solid fa-truck-fast'></i>
                                Tra cứu đơn mua
                            </button>
                        </a>
                    </div>

                    {{! Cart }}
                    <div>
                        <a href='/cart'>
                            <button class='btn btn-dark' style='color: aliceblue;'>
                                <i class='fa-solid fa-cart-shopping'></i>
                                Giỏ hàng
                            </button>
                        </a>
                    </div>

                    {{! Account }}
                    <div class='btn-group'>
                        <button type='button' class='btn btn-dark dropdown-toggle' data-bs-toggle='dropdown' aria-expanded='false'>
                            <i class='fa-regular fa-circle-user'></i>
                            {{! Tài Khoản }}
                            {{#if user}}
                                Xin chào,
                                {{user.lastname}}
                            {{else}}
                                Tài Khoản
                            {{/if}}
                        </button>
                        <ul class='dropdown-menu'>
                            {{#if user}}
                                <li><a class='dropdown-item' href='/user/my-account'>Quản Lý Tài Khoản</a></li>
                                <li><a class='dropdown-item' href='/user/sign-out'>Đăng Xuất</a></li>
                            {{else}}
                                <li><a class='dropdown-item' href='/user/sign-in'>Đăng Nhập</a></li>
                                <li><a class='dropdown-item' href='/user/sign-up'>Đăng Ký</a></li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

