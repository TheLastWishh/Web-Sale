{{! BREADCRUMB  START }}
<div id='breadcrumb' class='section'>
    <div class='container'>
        <div class='row'>
            <div class='col-md-12'>
                <ul class='breadcrumb-tree'>
                    <li><a href='/'>Trang chủ</a></li>
                    <li class='active'>Tài khoản</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{{! BREADCRUMB  END }}

{{! MY ACCOUNT  START }}
<div class='my-account'>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-md-3'>
                <div class='nav flex-column nav-pills' role='tablist' aria-orientation='vertical'>
                    <a href='#' class='nav-link active' id='dashboard-nav' data-bs-toggle='pill' data-bs-target='#dashboard-tab' role='tab'>
                        <i class='fa-regular fa-user'></i>
                        Xin chào,
                        {{user.username}}</a>
                    <a class='nav-link' id='orders-nav' data-bs-toggle='pill' data-bs-target='#orders-tab' href='#orders-tab' role='tab'><i class='fa-solid fa-bag-shopping'></i>Đơn Hàng</a>
                    <a class='nav-link' id='account-nav' data-bs-toggle='pill' data-bs-target='#account-tab' href='#account-tab' role='tab'><i class='fa fa-user'></i>Chi Tiết Tài Khoản</a>
                    <a class='nav-link' href='/user/sign-out'><i class='fa fa-sign-out-alt'></i>Đăng Xuất</a>
                </div>
            </div>

            <div class='col-md-9'>
                <div class='tab-content'>
                    <div class='tab-pane fade show active' id='dashboard-tab' role='tabpanel' aria-labelledby='dashboard-nav'>
                        <h4>
                            Chào
                            {{user.lastname}}
                        </h4>
                        <p>
                            Đây là trang quản lý tài khoản của bạn.
                        </p>
                    </div>
                    <div class='tab-pane fade' id='orders-tab' role='tabpanel' aria-labelledby='orders-nav'>
                        <div class='table-responsive'>
                            <table class='table table-bordered'>
                                <thead class='thead-dark'>
                                    <tr>
                                        <th>Mã Đơn Hàng</th>
                                        <th>Ngày Đặt Hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Tình trạng</th>
                                        <th>Tùy chọn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#if listOrders}}
                                        {{#each listOrders}}
                                            <tr>
                                                <td>{{this.PurchaseOrderID}}</td>
                                                <td>{{this.OrderDate}}</td>
                                                <td>{{this.Total}}<i class='fa-solid fa-dong-sign'></i></td>
                                                <td>{{this.State}}</td>
                                                <td>
                                                    <a href='/cart/purchase-order-details/{{this.PurchaseOrderID}}'><button class='btn btn-outline-danger'>View</button></a>
                                                </td>
                                            </tr>
                                        {{/each}}
                                    {{/if}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class='tab-pane fade' id='account-tab' role='tabpanel' aria-labelledby='account-nav'>
                        <h4>Chi Tiết Tài Khoản</h4>
                        <form action='/user/update' method='post'>
                            <div class='row'>
                                <div class='col-md-6'>
                                    <label for='firstname' class='form-label'>Họ</label>
                                    <input id='firstname' name='firstname' class='form-control' type='text' placeholder='{{user.firstname}}' />
                                </div>
                                <div class='col-md-6'>
                                    <label for='lastname' class='form-label'>Tên</label>
                                    <input id='lastname' name='lastname' class='form-control' type='text' placeholder='{{user.lastname}}' />
                                </div>
                                <div class='col-md-6'>
                                    <label for='email' class='form-label'>Email</label>
                                    <input id='email' name='email' class='form-control' type='email' placeholder='{{user.email}}' />
                                </div>
                                <div class='col-md-6'>
                                    <label for='phone' class='form-label'>Số Điện Thoại</label>
                                    <input id='phone' name='phone' class='form-control' type='text' placeholder='{{user.phone}}' />
                                </div>
                                <div class='col-12'>
                                    <label for='address' class='form-label'>Địa chỉ</label>
                                    <input id='address' name='address' class='form-control' type='text' placeholder='{{user.address}}' />
                                </div>
                                <div class='col-md-12 mt-2'>
                                    <button class='btn btn-outline-danger'>Cập Nhật Tài Khoản</button>
                                    <br /><br />
                                </div>
                            </div>
                        </form>
                        <h4>Đổi Mật Khẩu</h4>
                        <form action='/user/change-password' method='post'>
                            <div class='row'>
                                <div class='col-md-12'>
                                    <input name='password' class='form-control' type='password' placeholder='Mật khẩu hiện tại' />
                                </div>
                                <div class='col-md-6 mt-2'>
                                    <input name='newPassword' class='form-control' type='password' placeholder='Mật khẩu mới' />
                                </div>
                                <div class='col-md-6 mt-2'>
                                    <input name='confirmPassword' class='form-control' type='password' placeholder='Xác nhận mật khẩu mới' />
                                </div>
                                <div class='col-md-12 mt-2'>
                                    <button class='btn btn-outline-danger'>Đổi mật khẩu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{! MY ACCOUNT  START }}