<div class='login'>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-lg-6 mx-auto'>
                <div class='register-form'>
                    <form class='row g-3' method='post' action='/user/store'>
                        <legend class='text-center mt-4'>ĐĂNG KÝ</legend>
                        <div class='col-md-12'>
                            <label for='username' class='form-label'>Tên Đăng Nhập</label>
                            <br />
                            <i class='text-danger'>{{message1}}</i>
                            <input id='username' name='username' class='form-control' type='text' placeholder='Username' />
                        </div>
                        <div class='col-md-6'>
                            <label for='firstname' class='form-label'>Họ</label>
                            <input id='firstname' name='firstname' class='form-control' type='text' placeholder='Họ' />
                        </div>
                        <div class='col-md-6'>
                            <label for='lastname' class='form-label'>Tên</label>
                            <input id='lastname' name='lastname' class='form-control' type='text' placeholder='Tên' />
                        </div>
                        <div class='col-md-6'>
                            <label for='email' class='form-label'>Email</label>
                            <br />
                            <i class='text-danger'>{{message2}}</i>
                            <input id='email' name='email' class='form-control' type='email' placeholder='Email' />
                        </div>
                        <div class='col-md-6'>
                            <label for='phone' class='form-label'>Số Điện Thoại</label>
                            <input id='phone' name='phone' class='form-control' type='text' placeholder='0123456789' />
                        </div>
                        <div class='col-md-6'>
                            <label for='password' class='form-label'>Mật Khẩu</label>
                            <input id='password' name='password' class='form-control' type='password' placeholder='Nhập mật khẩu của bạn' />
                        </div>
                        <div class='col-md-6'>
                            <label for='retype' class='form-label'>Nhập Lại Mật Khẩu</label>
                            <input id='retype' name='retypePassword' class='form-control' type='password' placeholder='Nhập lại mật khẩu' />
                        </div>
                        <div class='col-12'>
                            <label for='address' class='form-label'>Địa chỉ</label>
                            <input id='address' name='address' class='form-control' type='text' placeholder='Địa chỉ' />
                        </div>
                        <div class='col-md-12 text-center'>
                            <button type='submit' class='btn btn-outline-danger'>Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>